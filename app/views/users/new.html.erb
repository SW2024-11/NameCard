<%= form_with model: @user, url: users_path do |f| %>
  <body>
    <div class="top">
    <h1>新規登録</h1>
    </div>
    <br>
    <div class="input">
    <%= f.label :my_company, '会社名' %>
    <%= f.text_field :my_company, class: "field" %>
    <br>
    <%= f.label :my_name, '名前' %>
    <%= f.text_field :my_name, class: "field" %>
    <br>
    <%= f.label :pass, 'パスワード' %>
    <%= f.text_field :pass, class: "field" %>
    <br>
    <div class="buttons">
    <%= f.submit '登録' ,class: "registration-button"%>
    </div>
  </body>
<% end %>