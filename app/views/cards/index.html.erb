<%= link_to @mypage ? '会社ページ' : 'マイページ', cards_path(mypage: !@mypage) %>　
<%= link_to 'ログアウト', top_logout_path %>　
<%= link_to '新規追加', new_card_path if @mypage %>

<h3><%= @mypage ? 'マイページ' : '会社ページ' %></h3>

<h1><%= @mypage ? '登録名刺' : '名刺' %></h1>

<%= form_with(url: cards_path, method: :get, local: true) do |f| %>
  <%= f.label :query, "検索" %>
  <%= f.text_field :query, value: params[:query], placeholder: "キーワード入力" %>
  <%= f.submit "検索" %>
<% end %>

<% if @cards.any? %>
  <h2>検索結果</h2>
  <ul>
    <% @cards.each do |c| %>
      <li>
        <strong><%= c.company %></strong><br>
        名前: <%= c.name %><br>
        <%= link_to '詳細', card_path(c) %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>該当する結果が見つかりませんでした。</p>
<% end %>
