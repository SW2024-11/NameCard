<%= link_to 'ログアウト', cards_path %>　<%= link_to '新規追加', new_card_path %>

<h3>マイページ</h3>

<h1>登録名刺</h1>

<%= form_with(url: card_with_view_type_path(view_type: 'mypage', card_ids: @cards.pluck(:id).join(',')), method: :get, local: true) do |f| %>
  <%= f.label :query, "検索" %>
  <%= f.text_field :query, value: params[:query], placeholder: "キーワード入力" %>
  <%= f.submit "検索" %>
<% end %>

<% if @cards.any? %>
  <h2>検索結果</h2>
  <ul>
    <% @cards.each do |c| %>
      <li>
        <strong><%= c.company %></strong><br>
        名前: <%= c.name %><br>
        <%=link_to '詳細', card_with_view_type_path(c.id, 'myshow') %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>該当する結果が見つかりませんでした。</p>
<% end %>