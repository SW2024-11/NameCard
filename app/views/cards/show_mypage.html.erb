<p>会社名：<%= @card.company %></p>
<p>氏名：<%= @card.name %></p>
<p>役職(肩書き)：<%= @card.position %></p>
<p>資格：<%= @card.license %></p>
<p>メールアドレス：<%= @card.mail %></p>
<p>電話番号：<%= @card.tell %></p>
<p>会社住所：<%= @card.company_adress %></p>

<% if @card.image.try(:attached?) %>
  <p>名刺画像：<%= image_tag url_for(@card.image), alt: "名刺画像", width: 200 %></p>
<% else %>
  <p>画像がありません。</p>
<% end %>

<p><%= link_to '戻る', request.referer %></p>

<p><%= link_to '編集', edit_card_path(@card) %>　<%= link_to '削除', card_path(@card), data: {turbo_method: :delete} %></p>





<!-- @mypage = false -->
<% if @mypage == false %>

  <% @mypage = true %>
  <%= link_to 'マイページ', cards_path %>
　<%= link_to 'ログアウト', top_logout_path %>

  <h3>会社ページ</h3>

  <h1>名刺</h1>

  <%= form_with(url: cards_path, method: :get, local: true) do |f| %>
    <%= f.label :query, "検索" %>
    <%= f.text_field :query, value: params[:query], placeholder: "キーワード入力" %>
    <%= f.submit "検索" %>
  <% end %>

  <% if @cards.any? %>
    <h2>検索結果</h2>
    <ul>
      <% @cards.each do |c| %>
        <li>
          <strong><%= c.company %></strong><br>
          名前: <%= c.name %><br>
          <%=link_to '詳細', card_path(c) %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>該当する結果が見つかりませんでした。</p>
  <% end %>

<!-- @mypage = true -->
<% else %>

  <% @mypage = false %>
  <%= link_to '会社ページ', cards_path %>　<%= link_to 'ログアウト', top_logout_path %>　<%= link_to '新規追加', new_card_path %>

